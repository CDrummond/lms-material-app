<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/server_settings">
        <Preference app:title="@string/discover" app:key="discover" app:summary="@string/no_servers"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/display">
        <SeekBarPreference app:title="@string/scale" app:key="scale" android:min="0" android:max="5"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/cache">
        <Preference app:title="@string/clear_cache" app:key="clearcache"/>
    </PreferenceCategory>
</PreferenceScreen>
